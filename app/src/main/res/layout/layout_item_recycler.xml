<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardCornerRadius="10dp"
    android:layout_marginTop="5dp"
    android:backgroundTint="#F8DDF4">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dp">
        <ImageView
            android:id="@+id/imgViewSP"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:src="@drawable/ic_person_outline"/>
        <TextView
            android:id="@+id/tvTenSP"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:hint="Tên SP"
            android:layout_toEndOf="@+id/imgViewSP"
            android:textSize="20dp"
            android:textStyle="bold"
            android:textColor="#FF5722"
            android:layout_marginLeft="10dp"/>
        <TextView
            android:id="@+id/tvGiaBanSP"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:hint="Gia SP"
            android:layout_toEndOf="@+id/imgViewSP"
            android:textSize="16dp"
            android:textStyle="bold"
            android:textColor="#000000"
            android:layout_marginLeft="10dp"
            android:layout_below="@+id/tvTenSP"/>
        <TextView
            android:id="@+id/tvSoLuongSP"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:hint="Số lượng"
            android:layout_toEndOf="@id/tvGiaBanSP"
            android:layout_below="@id/tvTenSP"
            android:textColor="@color/black"
            android:textSize="16dp"
            android:layout_marginLeft="10dp"/>
        <ImageView
            android:id="@+id/icDeleteSP"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_delete"
            android:layout_alignParentEnd="true"/>
        <ImageView
            android:id="@+id/icEditSP"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_create"
            android:layout_toLeftOf="@id/icDeleteSP"/>
    </RelativeLayout>

</androidx.cardview.widget.CardView>